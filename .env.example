# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=femete_impulsa
DB_USER=postgres
DB_PASSWORD=your_password

# Security Configuration
# API Keys (comma-separated for multiple keys)
# Generate secure keys: openssl rand -hex 32
API_KEYS=dev-key-change-in-production

# CORS - Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://intranet.empresa.com,https://portal.empresa.com

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Power BI Configuration (optional)
POWERBI_CLIENT_ID=your_powerbi_client_id
POWERBI_CLIENT_SECRET=your_powerbi_client_secret
POWERBI_TENANT_ID=your_tenant_id
POWERBI_WORKSPACE_ID=your_workspace_id

# Email Configuration (optional - for notifications)
EMAIL_HOST=smtp.empresa.local
EMAIL_PORT=587
EMAIL_USER=femete@empresa.local
